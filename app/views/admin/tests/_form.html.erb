<div class="card border-primary">
  <div class="card-body">
    <%= form_with(model: [:admin, test], local: true ) do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :category_id %>
          <%= form.collection_select :category_id, Category.all, :id, :title, class: 'form-control' %>
        </p>
        <p>
          <%= form.label :level %>
          <%= form.number_field :level, id: :test_level, class: 'form-control' %>
        </p>
        <%= form.submit class: 'btn btn-primary'%>
        <%= link_to t('links.back'), admin_tests_path, class: 'btn'%>
    <% end %>
    </div>
  </div>
</div>
