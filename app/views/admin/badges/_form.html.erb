<div class="card border-primary">
  <div class="card-body">
    <%= form_with(model: [:admin, @badge], local: true, class: 'edit-badge') do |form| %>
      <div class="form-group">
        <p>
          <%= form.label :title %>
          <%= form.text_field :title, class: 'form-control' %>
        </p>

        <p>
          <%= form.label :badge_image%>
          <%= form.select :badge_image, options_for_select(Badge::BADGE_IMAGES), class: 'form-control', id: :rule_options%>
        </p>
        <p>
          <%= form.label :rule, id: :rule%>
          <%= form.select :rule, options_for_select(Badge::BADGE_RULES), class: 'form-control', id: :rule_options%>
        </p>
        <p class="category hide">
          <%= form.label :category_id %>
          <%= form.collection_select :rule_params, Category.all, :id, :title, class: 'form-control' %>
        </p>
        <p>        В параметрах укажите id категории или уровень в зависимости от выбранного правила:
        </p>

        <table class="table table-hover">
          <thead class="thead-inverse">
          <tr>
            <th><%= t('.id') %></th>
            <th><%= t('.title') %></th>
          </thead>
          <tbody>
          <% Category.all.each do |category|  %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
          </tr>
            <% end %>
          </tbody>
        </table>

        <p class="level">
          <%= form.label :rule_params %>
          <%= form.number_field :rule_params, id: :test_level, class: 'form-control' %>
        </p>
          <p>
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control' %>
        </p>
        <%= form.submit class: 'btn btn-primary'%>
        <%= link_to t('links.back'), admin_tests_path, class: 'btn'%>
    <% end %>
    </div>
  </div>
</div>
